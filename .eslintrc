{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "classes": true,
    "modules": true
  },
  "rules": {
    "comma-dangle": 0,
    "no-restricted-syntax":0,
    "no-loop-func": 0,
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "func-names": 0
  }
}
